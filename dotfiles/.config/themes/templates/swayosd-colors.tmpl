/* SwayOSD Theme - Brand Guide - Glassmorphism */

window#osd {
    background: rgba({{BG_LIGHT_RGB}}, 0.65);
    border: 1px solid rgba({{PRIMARY_DARK_RGB}}, 0.5);
    border-top: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 12px;
    padding: 12px 20px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
}

#container {
    margin: 10px;
}

image {
    color: {{TEXT}};
}

levelbar block.filled {
    background: linear-gradient(to right, {{PRIMARY_DARKEST}}, {{PRIMARY}});
    border-radius: 4px;
}

levelbar block.empty {
    background: {{BORDER}};
    border-radius: 4px;
}

levelbar trough {
    background: rgba({{BG_DARK_RGB}}, 0.6);
    border-radius: 6px;
    min-height: 10px;
    border: 1px solid rgba({{BORDER_RGB}}, 0.3);
}

label {
    color: {{TEXT}};
    font-family: "Crimson Text";
    font-size: 14px;
}
