/* NWG-Dock Theme - Brand Guide - Glassmorphism */

window {
    background: rgba({{BG_LIGHT_RGB}}, 0.20);
    border-radius: 12px;
    border: 1px solid rgba({{PRIMARY_DARK_RGB}}, 0.5);
    border-top: 1px solid rgba(255, 255, 255, 0.15);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
}

#box {
    padding: 10px;
}

#active {
    border-bottom: solid 2px;
    border-color: rgba({{PRIMARY_RGB}}, 0.8);
}

button, image {
    background: none;
    border-style: none;
    box-shadow: none;
    color: {{TEXT}};
}

button {
    padding: 4px;
    margin-left: 4px;
    margin-right: 4px;
    color: {{TEXT}};
    font-size: 12px;
    border-radius: 8px;
}

button:hover {
    background-color: rgba({{PRIMARY_DARK_RGB}}, 0.7);
    border-radius: 8px;
}

button:focus {
    box-shadow: none;
}
