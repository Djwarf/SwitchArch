# Kitty Theme - Brand Guide

# Font
font_family      JetBrainsMono Nerd Font
font_size        12.0
# Enable ligatures
disable_ligatures never

# Cursor
cursor                  {{PRIMARY_LIGHT}}
cursor_text_color       {{BG_DARK}}
cursor_shape            beam

# Scrollback
scrollback_lines        10000

# Mouse
url_color               {{PRIMARY}}
url_style               single

# Window
window_padding_width    10
background_opacity      0.75
dynamic_background_opacity yes

# Colors - Brand Guide
foreground              {{TEXT}}
background              {{BG}}
selection_foreground    {{BG_DARK}}
selection_background    {{PRIMARY_LIGHT}}

# Black (Grey scale)
color0                  {{BG_DARK}}
color8                  {{TEXT_DIM}}

# Red (Burgundy)
color1                  {{DANGER}}
color9                  #EF4444

# Green (Success)
color2                  #166534
color10                 {{SUCCESS}}

# Yellow (Warning)
color3                  #92400E
color11                 {{WARNING}}

# Blue (Info)
color4                  #1E3A8A
color13                 #3B82F6

# Magenta (Primary accent)
color5                  {{PRIMARY}}
color12                 {{PRIMARY_LIGHT}}

# Cyan (Accent)
color6                  {{ACCENT}}
color14                 {{PRIMARY_LIGHT}}

# White (Grey scale)
color7                  {{TEXT_MUTED}}
color15                 {{TEXT_BRIGHT}}

# Tab bar
tab_bar_style           powerline
active_tab_foreground   {{TEXT_BRIGHT}}
active_tab_background   {{PRIMARY_DARKEST}}
inactive_tab_foreground {{TEXT_MUTED}}
inactive_tab_background {{BG_DARK}}
